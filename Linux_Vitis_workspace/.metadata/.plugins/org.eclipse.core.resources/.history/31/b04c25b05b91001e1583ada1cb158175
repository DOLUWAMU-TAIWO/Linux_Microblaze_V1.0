#define UART_DEVICE_ID XPAR_AXI_UARTLITE_0_DEVICE_ID

// Pattern for displaying the number 1 with inverted logic
#define DIGIT_ONE 0b11001111 // Assuming 'b' and 'c' segments are for displaying '1' with inverted logic

